{
    "manifest_version": 3,
    "name": "Auto Textarea",
    "description": "Automates inputs for a HTML textarea tag.",
    "version": "1.0.0",
    "action": {
        "default_popup": "./popup/popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["scripting", "storage"],
    "host_permissions": ["https://*/*"]
}